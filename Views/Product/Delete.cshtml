@model Practical1.Models.Products;

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.UnitsInStock</dd>

        <dt class="col-sm-2">Reorder Level</dt>
        <dd class="col-sm-10">@Model.ReorderLevel</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.ProductID" />
        <button type="submit" class="btn btn-warning btn-sm">Delete</button>
    </form>
</div>